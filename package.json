{
  "name": "hs-tariff-navigator",
  "version": "1.0.0",
  "description": "FTA/EPA譛驕ｩ蛹砲hrome諡｡蠑ｵ讖溯・ - 雋ｿ譏薙さ繧ｹ繝亥炎貂帶髪謠ｴ繝・・繝ｫ",
  "private": true,
  "scripts": {
    "dev": "webpack --mode development --watch",
    "build": "webpack --mode production",
    "build:dev": "webpack --mode development",
    "clean": "rimraf dist",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "version": "node scripts/sync-version.js && git add public/manifest.json",
    "postversion": "git push && git push --tags",
    "pack:zip": "npm run clean && npm run build && cd dist && npx -y bestzip ../tariff-scope-$(node -p \"require('../package.json').version\").zip .",
    "prerelease": "npm run type-check && npm run lint && npm test",
    "release:patch": "npm run prerelease && npm version patch",
    "release:minor": "npm run prerelease && npm version minor",
    "release:major": "npm run prerelease && npm version major"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.1",
    "@types/chrome": "^0.0.248",
    "@types/jest": "^30.0.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "autoprefixer": "^10.4.16",
    "copy-webpack-plugin": "^11.0.0",
    "css-loader": "^6.8.1",
    "dotenv": "^17.2.1",
    "eslint": "^8.0.0",
    "eslint-plugin-react": "^7.33.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "html-webpack-plugin": "^5.5.3",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "postcss": "^8.4.31",
    "postcss-loader": "^7.3.3",
    "rimraf": "^5.0.5",
    "style-loader": "^3.3.3",
    "tailwindcss": "^3.3.5",
    "ts-jest": "^29.4.6",
    "ts-loader": "^9.5.0",
    "typescript": "^5.2.2",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  }
}
