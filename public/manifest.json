{
  "manifest_version": 3,
  "name": "TariffScope - FTA/EPA最適化ツール",
  "version": "1.0.1",
  "description": "日本企業の貿易コスト削減を支援。FTA/EPA協定の最適な関税率を自動判定し、削減額をシミュレーション。",
  "permissions": [
    "storage",
    "activeTab",
    "alarms"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.jetro.go.jp/*",
        "*://*.customs.go.jp/*",
        "*://*.meti.go.jp/*",
        "*://*.mofa.go.jp/*",
        "*://*.tradestats.go.jp/*",
        "*://*.alibaba.com/*",
        "*://*.made-in-china.com/*",
        "*://*.globalsources.com/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "TariffScope"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "data/*"
      ],
      "matches": [
        "*://*.jetro.go.jp/*",
        "*://*.customs.go.jp/*",
        "*://*.meti.go.jp/*",
        "*://*.mofa.go.jp/*",
        "*://*.tradestats.go.jp/*",
        "*://*.alibaba.com/*",
        "*://*.made-in-china.com/*",
        "*://*.globalsources.com/*"
      ]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; style-src 'self' 'unsafe-inline'"
  }
}
